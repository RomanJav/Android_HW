<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:baselineAligned="false">
            <fragment android:id="@+id/studentListFragment"
                      android:name="by.academy.hwTomal.hw7.fragment.StudentListFragment"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_weight="1.5"
                      tools:layout="@layout/activity_list_student"/>

            <fragment android:id="@+id/studentEditFragment"
                      android:name="by.academy.hwTomal.hw7.fragment.StudentEditFragment"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_weight="1"
                      tools:layout="@layout/activity_edit_student"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>