<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="by.academy.hwTomal.MainActivity"
        android:background="@color/backgroundMain">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="40dp">
            <Button
                    android:id="@+id/btnHw1"
                    android:text="@string/homework1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="startActivityHW1"
                    style="@style/btnClassic"
            />
            <Button
                    android:id="@+id/btnHw2"
                    android:text="@string/homework2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="startActivityHW2"
                    style="@style/btnClassic"
            />
            <Button
                    android:id="@+id/btnHw3"
                    android:text="@string/homework3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="startActivityHW3"
                    style="@style/btnClassic"
            />
            <Button
                    android:id="@+id/btnHw4"
                    android:text="@string/homework4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="startActivityHW4"
                    style="@style/btnClassic"
            />
            <Button
                    android:id="@+id/btnHw5"
                    android:text="@string/homework5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="startActivityHW5"
                    style="@style/btnClassic"
            />
            <Button
                    android:id="@+id/btnHw6"
                    android:text="@string/homework6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="startActivityHW6"
                    style="@style/btnClassic"
            />
        </LinearLayout>
    </ScrollView>
</LinearLayout>