<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="bthSearchStyle">
        <item name="android:background">@color/ButtonTwo</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/textLight</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">20dp</item>
    </style>
    <style name="editTextStyle1">
        <item name="android:gravity">center</item>
        <item name="android:background">@color/textBackgroundDark</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/textLight</item>
        <item name="android:padding">10dp</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="radioButtonStyle">
        <item name="android:gravity">center</item>
        <item name="android:background">@color/textBackgroundDark</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/color1</item>
        <item name="android:padding">10dp</item>
    </style>
	
</resources>
